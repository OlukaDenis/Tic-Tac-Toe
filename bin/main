#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/board'
require_relative '../lib/selection_display'
require_relative '../lib/check_player'

$player_pick = ''
$is_player_one_turn = true
$turn = 0
$board_controller = Board.new
$local_selector = Selector.new

def init_board
  puts '--------------'
  $board_controller.board.each do |n|
    puts n.join '  |  '
    puts '--------------'
  end
end

def display_player_move(player_mark)
  puts 'Player ' + player_mark + "'s turn, make your pick"
  puts '--------------'
  player_pick = gets.to_i
  if player_pick > 0 && player_pick < 10 && $local_selector.is_valid?(player_pick.to_s, $board_controller.board)
    $board_controller.board = $local_selector.selection(player_mark, player_pick.to_s, $board_controller.board)
    init_board
    $turn += 1
    $is_player_one_turn = player_mark != 'X'
    if $board_controller.check_for_winner($board_controller.board)[0] == true
      puts '--------------'
      puts 'GameOver!! player ' +$board_controller.check_for_winner($board_controller.board)[1]+ "'s" + ' has WON the game!!'
      puts '--------------'
      $turn = 10
    end
  else
    puts '--------------'
    puts 'Wrong input, Choose any number from 1~9 and be sure your selection is not taken'
  end
end

puts 'THE GAME IS ON!'
puts '-----------------------'
puts 'Game will start select a valid input for your play (Any number from 1~9)'
init_board

while $turn < 9
  if $is_player_one_turn
    display_player_move('X')
    
  else
    display_player_move('O')
  end
end

if $turn == 9 && $board_controller.check_for_winner($board_controller.board)[0] == false
  puts "What a game!! we have a draw! Better luck next time!!"
end
